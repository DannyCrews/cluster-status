


<%#=  raw ap(@health['database']) %>

<div class="center">
  <h1 class='col-md-12'><span class='title'>Health Status Board</span></h1>
</div>


<div class="center row">
  <p class="center">Health Status:
    <% if @health['ok'] == true %>
      <span class='text-success'><%= @health['ok'] %></span></p>
    <% else %>
      <span class='text-danger'><%= @health['ok'] %></span></p>
    <% end %>
</div>

<div class="row">
  <div class="col-md-6">
    <h2>Services Status </h2>
    <table class="table-sm table-bordered">
      <thead>
        <tr>
          <th>Service</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% @health['services'].each do |name, status| %>
          <tr>
            <td><%= name %>:</td>
            <% if status == 'ok' || status == true %>
              <td class='text-success'><%= status %></td>
            <% else %>
              <td class='text-danger'><%= status %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
  <div class="col-md-6">
    <h2>General Database Status</h2>
      <table class="table-sm table-bordered">
        <thead>
          <tr>
            <th>Service</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% @health['database'].each do |name, status| %>
            <tr>
              <% if name != 'replication_status' %>
                <td><%= name %>:</td>
                <td><%= status %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <h2>Replication Database Status</h2>
    <%= render 'repstat_table' %>
  </div>
</div>



